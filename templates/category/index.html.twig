{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

<h2>Ajouter une catégorie</h2>
{{ form_start(form) }}
	{{ form_errors(form, {"class":"is-invalid"}) }}
	{{ form_label(form.name, null, {"class":"form-label"}) }}
	{{ form_widget(form.name, {"class":"form-control is-invalid"}) }}
	<button type="submit" class="btn btn-outline-primary">Créer</button>
{{ form_end(form) }}

<table>
{% for category in categories %}
	<tr>
		<td>{{ category.name }}</td>
		<td><button class="btn">Supprimer</button></td>
	</tr>
{% endfor %}
</table>

{% endblock %}
